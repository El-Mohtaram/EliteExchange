import javafx.application.ApplicationElite;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class example extends ApplicationElite {
    private Login account = new Login();
    private VBox layout1; // Reuse the same layout for both scenes

    @Override
    public void start(Stage primaryStage) {
        Scene scene1, scene2, scene3;

        // Create buttons
        Button signUp = new Button("Sign-Up");
        Button logIn = new Button("Log-In");
        Button back = new Button("Back");
        Button back2 = new Button("Back");

        // Set actions for buttons




        // Create input fields
        Label user = new Label("UserName");
        TextField userName = new TextField();
        Label user1 = new Label("UserName");
        TextField userName1 = new TextField();
        Label pass = new Label("Password");
        TextField password = new TextField();
        Label pass2 = new Label("Password");
        TextField password2 = new TextField();
        Label label3 = new Label("Confirm Password");
        TextField confirmPass = new TextField();

        // Create sign-up button
        Button confirmSignUp = new Button("Sign-Up");
        confirmSignUp.setOnAction(event -> {
            account.setUserName(userName.getText());
            account.setPassword(password.getText());
            account.setCheckPassword(confirmPass.getText());
            if (account.CheckMatchPassword())
                System.out.println("Signed in successfully");
            else
                System.out.println("Password mismatch, please try again");
        });

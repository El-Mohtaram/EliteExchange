        // Add components to layout1 (login scene)
        layout1 = new VBox(20);
        layout1.getChildren().addAll(logIn, signUp);
        scene1 = new Scene(layout1, 400, 400);
        back.setOnAction(event -> primaryStage.setScene(scene1));
        back2.setOnAction(event -> primaryStage.setScene(scene1));

        // Create layout2 (sign-up scene)
        VBox layout2 = new VBox(20);
        layout2.getChildren().addAll(user, userName, pass, password, label3, confirmPass, confirmSignUp, back);
        scene2 = new Scene(layout2, 400, 400);
        signUp.setOnAction(event -> primaryStage.setScene(scene2));
        // Create layout3 (log-in scene)
        VBox layout3 = new VBox(10);
        layout3.getChildren().addAll(user1, userName1, pass2, password2,confirmLogin, back2);
        scene3 = new Scene(layout3, 400, 400);
        logIn.setOnAction(event -> primaryStage.setScene(scene3));

        primaryStage.setTitle("Stock Market Management");
        primaryStage.setScene(scene1);
        primaryStage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}